DirectoryIndex index.php

# Ensure PHP can read raw POST data
<IfModule mod_php.c>
    php_value always_populate_raw_post_data -1
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip rewrite for actual PHP files
    RewriteCond %{REQUEST_URI} \.php$ [NC]
    RewriteRule ^ - [L]

    # Route all other requests through index.php (Next.js proxy)
    # E=HTTP_CONTENT_TYPE ensures Content-Type is passed
    RewriteRule ^(.*)$ index.php [E=HTTP_CONTENT_TYPE:%{HTTP:Content-Type},L,QSA]
</IfModule>
