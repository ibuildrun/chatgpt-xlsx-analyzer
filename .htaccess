DirectoryIndex index.php

# Enable reading of POST data
<IfModule mod_php.c>
    php_flag always_populate_raw_post_data On
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip rewrite for actual PHP files
    RewriteCond %{REQUEST_URI} \.php$ [NC]
    RewriteRule ^ - [L]

    # Route all other requests through index.php (Next.js proxy)
    # Pass through POST data
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>
