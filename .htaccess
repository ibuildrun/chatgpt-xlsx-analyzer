DirectoryIndex index.php

# PHP settings for raw POST data
<IfModule mod_php.c>
    php_value always_populate_raw_post_data -1
    php_flag enable_post_data_reading On
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip rewrite for actual PHP files
    RewriteCond %{REQUEST_URI} \.php$ [NC]
    RewriteRule ^ - [L]

    # Preserve POST data through rewrite
    # PT flag passes through to next handler
    RewriteRule ^(.*)$ index.php [PT,L,QSA]
</IfModule>
